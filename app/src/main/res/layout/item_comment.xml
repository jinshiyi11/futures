<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/default_background_color" >

    <com.makeramen.RoundedImageView
        android:id="@+id/iv_comment_user_head"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="12dp"
        android:src="@drawable/ic_default_head"
        app:riv_corner_radius="14dp" />

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="3dp"
        android:layout_toRightOf="@+id/iv_comment_user_head"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:baselineAligned="true"
            android:gravity="bottom"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_comment_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="xxx"
                android:textColor="@color/default_text_color"
                android:textSize="16sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" >
            </View>

            <TextView
                android:id="@+id/tv_comment_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="2015-00-00 00:00"
                android:textColor="@color/light_gray_color"
                android:textSize="10sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_comment_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:layout_marginRight="10dp"
            android:text="xxx"
            android:textColor="#666666"
            android:textSize="13sp" />

        <com.shuai.futures.view.WrapContentImageView
            android:id="@+id/iv_comment_image"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginBottom="6dp"
            android:scaleType="fitCenter"
            android:src="#f0f0f0"
            app:wrapHeight="true" />

        <LinearLayout
            android:id="@+id/ll_original_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/edit_bg"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/iv_original_comment_image"
                android:layout_width="58dp"
                android:layout_height="58dp"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="2dp"
                android:scaleType="fitCenter"
                android:src="#f0f0f0" />

            <TextView
                android:id="@+id/tv_original_comment_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginTop="4dp"
                android:text="TextView"
                android:textColor="#999999"
                android:textSize="13sp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>